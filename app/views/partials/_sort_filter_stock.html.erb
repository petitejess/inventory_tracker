<%= form_with(url: user_stocks_path(@user_stocks), method: :get, local: true) do |form| %>
  <%= select_tag(:sort_by, options_for_select(["Exp Date (Earliest)", "Exp Date (Latest)", "Qty (Least)", "Qty (Most)", "Stock Name (A-Z)", "Stock Name (Z-A)", "Category Name (A-Z)", "Category Name (Z-A)"], selected: params[:sort_by])) %>

  <% categories_filter.each do |category| %>
    <%= check_box_tag 'filter_by[]', category, params[:filter_by] == nil ? false : params[:filter_by].include?(category) %>
    <%= category %>
  <% end %>
  
  <%= form.submit "Apply" %>
<% end%>
